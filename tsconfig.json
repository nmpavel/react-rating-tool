{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",                // Change to NodeNext
    "moduleResolution": "NodeNext",      // Ensure this is set
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
